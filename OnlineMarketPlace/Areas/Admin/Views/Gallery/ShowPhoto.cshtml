
@{
    ViewData["Title"] = "عکس های گالری";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}


@model List<PhotoGallery>
<div class="row">
    <div class="col-md-12">
        <!-- Start .panel -->
        <div class="panel panel-card ">
            <div class="panel-heading">
                <h4 class="panel-title">  لیست عکس های گالری</h4>
                <div class="panel-actions">
                    <a href="#" class="panel-action panel-action-toggle" data-panel-toggle></a>
                    <a href="#" class="panel-action panel-action-dismiss" data-panel-dismiss></a>
                </div>
            </div>
            <div class="panel-body">
                <table id="basic-datatables" class="table table-bordered" cellspacing="0" width="100%">
                    <thead>
                        <tr>
                            <th># </th>
                            <th>نام </th>
                            <th>نام انگلیسی</th>
                            <th>عکس</th>
                            <th>کاربر اضافه کننده</th>
                            <th>موضوع</th>
                            <th>وضعیت</th>
                            <th>ویرایش</th>
                            <th>حذف</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th># </th>
                            <th>نام </th>
                            <th>نام انگلیسی</th>
                            <th>عکس</th>
                            <th>کاربر اضافه کننده</th>
                            <th>موضوع</th>
                            <th>وضعیت</th>
                            <th>ویرایش</th>
                            <th>حذف</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @if (Model.FirstOrDefault() != null)
                        {
                            int Counter = 1;
                            @foreach (var item in Model)
                            {
                        <tr>
                            <td>@Counter</td>
                            <td>@item.Name</td>
                            <td>@item.LatinName</td>


                            <td>
                                @if (item.Image != null)
                                {
                                    <img width="150" height="150" src="@($"data:image/jpeg;base64,{Convert.ToBase64String(item.Image)}")" />
                                }
                                else
                                {
                                    <img width="75" height="70" src="~/AdminLayout/images/avtar-1.png" />
                                }
                            </td>
                            <td>@item.LatinName</td>
                            <td>@item.LatinName</td>
                            <td>@item.Status</td>
                            <td>
                                <a asp-action="EditPhoto" asp-controller="Gallery" asp-area="Admin" asp-route-Id="@item.Id" class="btn btn-info btn-block">ویرایش</a>
                            </td>
                            <td>
                                <a asp-action="DeletePhoto" asp-controller="Gallery" asp-area="Admin" asp-route-Id="@item.Id" class="btn btn-danger btn-block">حذف</a>
                            </td>
                        </tr>
                                Counter++;
                            }
                        }

                    </tbody>
                </table>
            </div>
        </div>
        <!-- End .panel -->
    </div>
</div>


