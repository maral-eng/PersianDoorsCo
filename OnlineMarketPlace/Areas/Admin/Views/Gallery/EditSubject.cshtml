
@{
    ViewData["Title"] = "EditSubject";
    var Subject = ViewData["Subject"] as Subject;

    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model SubjectViewModel
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-card margin-b-30">
            <div class="panel-heading">
                <h4 class="panel-title"> افزودن موضوع </h4>
            </div>
            <div class="panel-body">
                <!-- Start .Form -->
                <div class="panel-body">
                    <form asp-area="Admin" asp-controller="Gallery" asp-action="EditSubjectConfirm"
                          id="form1" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <input hidden="hidden" asp-for="Id" type="text" value="@Subject.Id" />
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نام موضوع <span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <input asp-for="Name" type="text" value="@Subject.Name" class="form-control">
                                <span asp-validation-for="Name"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نام انگلیسی موضوع</label>
                            <div class="col-sm-10">
                                <input asp-for="LatinName" type="text" value="@Subject.LatinName" class="form-control">
                                <span asp-validation-for="LatinName"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">توضیحات</label>
                            <div class="col-sm-10">
                                <input asp-for="Description" type="text" value="@Subject.Description" class="form-control">
                                <span asp-validation-for="Description"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">وضعیت </label>
                            <div class="col-sm-10">
                                <div class="radio inline-element sp-rl-padding-10">
                                    <input asp-for="Status" value="true" type="radio" id="Option_1" checked>
                                    <label for="Option_1">فعال</label>
                                </div>
                                <div class="radio inline-element sp-rl-padding-10">
                                    <input asp-for="Status" value="false" type="radio" id="Option_2">
                                    <label for="Option_2">غیر فعال</label>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="button" id="btnCancel" >صرف نظر</button>
                            <button class="btn btn-primary" type="submit">ثبت </button>
                        </div>
                    </form>
                </div>
            </div>
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <!-- End .Form -->
        </div>
    </div>
</div>



