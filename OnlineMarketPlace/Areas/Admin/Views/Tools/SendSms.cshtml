
@{
    ViewData["Title"] = "ارسال پیامک";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-card margin-b-30">
            <div class="panel-heading">
                <h4 class="panel-title">  ارسال پیامک  </h4>
            </div>
            <div class="panel-body">
                <!-- Start .Form -->
                <div class="panel-body">
                    <form asp-area="admin" asp-controller="Tools" asp-action="SendSmsConfirm"
                          id="form1" method="get" class="form-horizontal">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">متن پیام<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <textarea rows="5" name="smsText" type="text" class="form-control"></textarea>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">شماره دریافت کننده<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <input name="phoneNumber" type="text" class="form-control">
                            </div>
                        </div>

                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="button" id="btnCancel">صرف نظر</button>
                            <button class="btn btn-primary" type="submit">ارسال</button>
                        </div>
                    </form>
                </div>
            </div>
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="~/persian_datepicker/js/persianDatepicker.min.js"></script>
        </div>
    </div>

</div>

