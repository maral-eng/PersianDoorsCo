
@{
    ViewData["Title"] = "تنظیمات جداول جانبی";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@model AdditionalTablesViewModel
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-card margin-b-30">
            <div class="panel-heading">
                <h4 class="panel-title">  تنظیمات جداول جانبی </h4>
            </div>
            <div class="panel-body">
                <form asp-area="admin" asp-controller="Tools" asp-action="FillAdditionalTables"
                      id="form1" method="post" class="form-horizontal" enctype="multipart/form-data">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">اکسل کشورها </label>
                        <div class="col-sm-8">
                            <input asp-for="Country" type="file" class="form-control">
                            <span asp-validation-for="Country"></span>
                        </div>
                        <div class="col-sm-2">
                            <label>
                                حذف لیست موجود
                                <input asp-for="RewriteCountry" class="custom-control" type="checkbox" checked value="true"/>
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">اکسل استان ها </label>
                        <div class="col-sm-8">
                            <input asp-for="Province" type="file" class="form-control">
                            <span asp-validation-for="Province"></span>
                        </div>
                        <div class="col-sm-2">
                            <label>
                                حذف لیست موجود
                                <input asp-for="RewriteProvince" class="custom-control" type="checkbox" checked value="true" />
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label">اکسل شهرها </label>
                        <div class="col-sm-8">
                            <input asp-for="City" type="file" class="form-control">
                            <span asp-validation-for="City"></span>
                        </div>
                        <div class="col-sm-2">
                            <label>
                                حذف لیست موجود
                                <input asp-for="RewriteCity" class="custom-control" type="checkbox" checked value="true" />
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 control-label"></label>
                        <div class="col-sm-10">
                            <button class="btn btn-primary">ثبت جداول</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

