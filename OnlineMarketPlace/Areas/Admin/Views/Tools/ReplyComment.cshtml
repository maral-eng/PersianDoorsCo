
@{
    ViewData["Title"] = "پاسخ به نظرات";
    var dbContactUs = ViewData["dbContactUs"] as ContactUs;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}



@model EmailViewModel
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-card margin-b-30">
            <div class="panel-heading">
                <h4 class="panel-title"> ارسال پاسخ به نظرات کاربر  </h4>
            </div>
            <div class="panel-body">
                <!-- Start .Form -->
                <div class="panel-body">
                    <form asp-area="admin" asp-controller="Tools" asp-action="SendEmailConfirm"
                          id="form1" method="post" class="form-horizontal" enctype="multipart/form-data">
                        <div class="form-group">
                            <label class="col-sm-2 control-label">نام کاربر</label>
                            <div class="col-sm-10">
                                <input type="text" readonly="readonly" value="@dbContactUs.Name" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ایمیل کاربر</label>
                            <div class="col-sm-10">
                                <input type="text" value="@dbContactUs.Email" class="form-control">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">پیام کاربر</label>
                            <div class="col-sm-10">
                                <textarea rows="5" type="text" readonly="readonly" class="form-control">@dbContactUs.Comment</textarea>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ارسال کننده<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <select class="form-control m-b" asp-for="SenderEmail">
                                    <option value="info@persiandoorsco.ir" selected="selected">Info@PersianDoorsCo.ir</option>
                                </select>
                                <span asp-validation-for="SenderEmail"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">پسورد <span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <input asp-for="Password" type="password" class="form-control">
                                <span asp-validation-for="Password"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">ایمیل مقصد<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <input asp-for="ReceiverEmail" type="text" class="form-control" value="@dbContactUs.Email">
                                <span asp-validation-for="ReceiverEmail"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">عنوان پیام<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <input asp-for="Subject" type="text" class="form-control">
                                <span asp-validation-for="Subject"></span>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">متن ایمیل<span class="red-color">*</span></label>
                            <div class="col-sm-10">
                                <textarea rows="8" asp-for="Content" type="text" class="form-control"></textarea>
                                <span asp-validation-for="Content"></span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>

                        <div class="form-group">
                            <label class="col-sm-2 control-label">فایل ها</label>
                            <div class="col-sm-10">
                                <div class="custom-file">
                                    <input asp-for="AttachedFiles" type="file" class="custom-file-input" multiple>
                                </div>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="col-sm-4 col-sm-offset-2">
                            <button class="btn btn-white" type="button" id="btnCancel">صرف نظر</button>
                            <button class="btn btn-primary" type="submit">ارسال</button>
                        </div>
                    </form>
                </div>
            </div>
            <script src="~/lib/jquery/dist/jquery.js"></script>
            <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
            <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
            <script src="~/persian_datepicker/js/persianDatepicker.min.js"></script>
            <script>
                $("#pdpBig").persianDatepicker({
                    cellWidth: 48,
                    cellHeight: 30,
                    fontSize: 15
                });
                $("#btnCancel").click(function () {
                    $("#form1")[0].reset();
                })
            </script>
            <!-- End .Form -->
        </div>
    </div>
</div>



