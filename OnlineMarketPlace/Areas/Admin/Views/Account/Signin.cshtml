
@{
    TempData["title"] = "ورود به پنل مدیریت";
    Layout = null;
}
@model SigninViewModel
<!DOCTYPE html>
<html lang="en" dir="rtl">

<!-- Mirrored from html.designstream.co.in/horizon/html/rtl/light-sidebar/login.html by HTTrack Website Copier/3.x [XR&CO'2014], Mon, 12 Aug 2019 20:41:55 GMT -->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>@TempData["title"]</title>

    <!-- Bootstrap -->
    <link href="~/AdminLayout/bootstrap-rtl-master/dist/css/bootstrap-rtl.min.css" rel="stylesheet">
    <link href="~/AdminLayout/css/waves.min.css" type="text/css" rel="stylesheet">
    <link rel="stylesheet" href="~/AdminLayout/css/nanoscroller.css">
    <!--        <link rel="stylesheet" href="css/nanoscroller.css">-->
    <link href="~/AdminLayout/css/style.css" type="text/css" rel="stylesheet">
    <link href="~/AdminLayout/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>
<body class="account">
    <div class="container">
        <div class="row">
            <div class="account-col text-center">
                <h1>ورود به پنل کاربری</h1>
                <h3>شرکت پرشین درب جنوب</h3>
                <form class="m-t" role="form" method="post" asp-action="SigninConfirm" asp-controller="Account" asp-area="Admin">
                    <div class="form-group">
                        <input asp-for="Username" type="text" class="form-control" placeholder="نام کاربری" required="">
                    </div>
                    <div class="form-group">
                        <input asp-for="Password" type="password" class="form-control" placeholder="کلمه عبور" required="">
                    </div>
                    <div class="form-group">
                        <label class="form-control-label" for="isRem">مرا بخاطر بسپار</label>
                        <input asp-for="IsRemember" id="isRem" type="checkbox">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block ">ورود</button>
                    <a href="#"><small>فراموشی رمز عبور</small></a>
                    <p>طراحی و توسعه، شرکت پیکسل، 1398</p>
                </form>
            </div>
        </div>
    </div>
    <script type="text/javascript" src="~/AdminLayout/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/AdminLayout/bootstrap-rtl-master/dist/js/bootstrap-rtl.min.js"></script>
    <script src="~/AdminLayout/js/pace.min.js"></script>
</body>
</html>
