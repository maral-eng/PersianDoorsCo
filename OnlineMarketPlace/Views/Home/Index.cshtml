                                                if (item.ProductImage.Count > 0)
                                                {
                                                    var mainImage = item.ProductImage.Where(x => x.IsMainImage == true && x.Status == true).FirstOrDefault();
                                                    if (mainImage != null)
                                                    {
                                                        <img src="@mainImage.ImagePath.Replace("wwwroot","")" class="img-fluid" alt="@item.Name">
                                                    }
                                                }
                                            }
