
@{
    ViewData["Title"] = "پنل کاربری";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@model EditUserViewModel
@inject UserManager<ApplicationUser> _userManager
@{
    var currentUser = await _userManager.FindByNameAsync(User.Identity.Name);
    string dobString = null;
    var currentPersianYear = CustomizeCalendar.CurrentPersianYear();
    if (currentUser.DateOfBirth != null)
    {
        dobString = @CustomizeCalendar.GregorianToPersian(currentUser.DateOfBirth ?? DateTime.Now);
    }
    if (!string.IsNullOrEmpty(dobString))
    {
        var date = dobString.Split("/");
        var year = date[0];
        var month = date[1];
        var day = date[2];
    }

}
<!-- Page Banner Section Start -->
<div class="page-banner-section section bg-image rtl-class" data-bg="/shared/main/assets/images/bg/breadcrumb.jpg">
    <div class="container">
        <div class="row">
            <div class="col">

                <div class="page-banner rtl-class">
                    <h2>پنل کاربری</h2>
                    <ul class="page-breadcrumb">
                        <li><a asp-action="Index" asp-controller="Home">صفحه نخست</a></li>
                        <li>پنل کاربری</li>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>
<!-- Page Banner Section End -->
<!--My Account section start-->
<div class="my-account-section rtl-class section pt-90 pt-lg-70 pt-md-60 pt-sm-50 pt-xs-45  pb-100 pb-lg-80 pb-md-70 pb-sm-60 pb-xs-50">
    <div class="container">
        <div class="row">

            <div class="col-12">
                <div class="row">
                    <!-- My Account Tab Menu Start -->
                    <div class="col-lg-3 col-12">
                        <div class="myaccount-tab-menu nav" role="tablist">
                            <a href="#dashboad" class="active" data-toggle="tab">
                                <i class="fa fa-dashboard"></i>
                                پروفایل
                            </a>

                            <a href="#orders" data-toggle="tab"><i class="fa fa-cart-arrow-down"></i> سفارشات</a>

                            <a href="#EditProfile" data-toggle="tab"><i class="fa fa-edit"></i> ویرایش اطلاعات کاربری</a>

                            <a href="#address-edit" data-toggle="tab"><i class="fa fa-map-marker"></i> ثبت آدرس</a>

                            <a href="#change-pass" data-toggle="tab"><i class="fa fa-key"></i> تغییر کلمه عبور</a>

                            <a asp-controller="Account" asp-action="Logout"><i class="fa fa-sign-out"></i> خروج</a>
                        </div>
                    </div>
                    <!-- My Account Tab Menu End -->
                    <!-- My Account Tab Content Start -->
                    <div class="col-lg-9 col-12">
                        <div class="tab-content" id="myaccountContent">
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade show active" id="dashboad" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>پروفایل</h3>

                                    <div class="welcome mb-20">
                                        <strong>اطلاعات شخصی</strong>
                                    </div>

                                    <div class="col-md-12">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">نام و نام خانوادگی : </label>
                                                    <label>
                                                        <strong>@($"{currentUser.FirstName} {currentUser.LastName}")</strong>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">نام کاربری : </label>
                                                    <label>
                                                        <strong>@currentUser.UserName</strong>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">شماره تلفن همراه : </label>
                                                    <label class="farsi-num">
                                                        <strong>@currentUser.PhoneNumber</strong>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">پست الکترونیک : </label>
                                                    <label>
                                                        <strong>@currentUser.Email</strong>
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">کد ملی : </label>
                                                    <label class="farsi-num">
                                                        <strong>@currentUser.NationalCode</strong>
                                                    </label>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label class="fg-pale-gray">تاریخ تولد : </label>
                                                    <label class="farsi-num">
                                                        @if (currentUser.DateOfBirth != null)
                                                        {
                                                            <strong>@CustomizeCalendar.GregorianToPersian(currentUser.DateOfBirth ?? DateTime.Now)</strong>
                                                        }
                                                    </label>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="orders" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>سفارشات</h3>

                                    <div class="myaccount-table table-responsive text-center">
                                        <table class="table table-bordered">
                                            <thead class="thead-light">
                                                <tr>
                                                    <th>ردیف</th>
                                                    <th>شماره سفارش</th>
                                                    <th>محصول</th>
                                                    <th>تاریخ</th>
                                                    <th>وضعیت</th>
                                                    <th>تعداد</th>
                                                    <th>قیمت کل</th>
                                                    <th>#</th>
                                                </tr>
                                            </thead>

                                            <tbody>
                                                <tr>
                                                    <td class="farsi-num">1</td>
                                                    <td>DK-1546</td>
                                                    <td>درب کاوه</td>
                                                    <td class="farsi-num">Aug 22, 2018</td>
                                                    <td>ارسال شده</td>
                                                    <td>2</td>
                                                    <td class="farsi-num local-price">2500000 تومان</td>
                                                    <td><a href="cart.html" class="btn">مشاهده</a></td>
                                                </tr>
                                                <tr>
                                                    <td class="farsi-num">2</td>
                                                    <td>DK-1534</td>
                                                    <td>درب طوس</td>
                                                    <td class="farsi-num">July 22, 2018</td>
                                                    <td>در حال پردازش</td>
                                                    <td>1</td>
                                                    <td class="farsi-num local-price">1000000 تومان</td>
                                                    <td><a href="cart.html" class="btn">مشاهده</a></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="EditProfile" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>ویرایش اطلاعات شخصی</h3>

                                    <div class="account-details-form">
                                        <form action="#">
                                            <div>
                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">نام : </label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="Firstname" class="form-control" type="text" value="@currentUser.FirstName">
                                                        <span asp-validation-for="Firstname"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">نام خانوادگی : </label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="Lastname" class="form-control" type="text" value="@currentUser.LastName">
                                                        <span asp-validation-for="Lastname"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">شماره تلفن همراه : </label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="Phonenumber" class="form-control" type="number" value="@currentUser.PhoneNumber">
                                                        <span asp-validation-for="Phonenumber"></span>
                                                    </div>
                                                </div>

                                                <div class="form-group row">
                                                    <label class="col-sm-3 col-form-label">کد ملی : </label>
                                                    <div class="col-sm-9">
                                                        <input asp-for="Nationalcode" class="form-control" type="number" value="@currentUser.NationalCode">
                                                        <span asp-validation-for="Nationalcode"></span>
                                                    </div>
                                                </div>

                                                <div class="row">
                                                    <label class="col-sm-3 col-form-label">تاریخ تولد : </label>
                                                    <div class="col-sm-2">
                                                        <select class="form-control full-width farsi-num sp-select">
                                                            <option value="">روز</option>
                                                            @for (int i = 1; i <= 31; i++)
                                                            {
                                                                <option value="@i">@i</option>
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-3">
                                                        <select class="form-control full-width sp-select">
                                                            <option value="">ماه</option>
                                                            @if(CustomizeCalendar.months.Count > 0)
                                                            {
                                                                foreach(var item in CustomizeCalendar.months)
                                                                {
                                                                    <option value="@item.Key">@item.Value</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                    <div class="col-sm-2">
                                                        <select class="form-control full-width farsi-num sp-select">
                                                            <option value="">سال</option>
                                                            @if (currentPersianYear > 0)
                                                            {
                                                                @for (int i = currentPersianYear - 5; i >= currentPersianYear - 90; i--)
                                                                {
                                                                    <option value="@i">@i</option>
                                                                }
                                                            }
                                                        </select>
                                                    </div>
                                                </div>

                                                <div class="col-12">
                                                    <button class="save-change-btn">ثبت تغییرات</button>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="address-edit" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>آدرس ها
                                        <label class="dashed-link">
                                            <a href="#">ثبت آدرس جدید</a>
                                        </label>
                                    </h3>
                                    
                                    <address>
                                        <p><strong>Alex Tuntuni</strong></p>
                                        <p>
                                            1355 Market St, Suite 900 <br>
                                            San Francisco, CA 94103
                                        </p>
                                        <p>Mobile: (123) 456-7890</p>
                                    </address>

                                    <a href="#" class="btn d-inline-block edit-address-btn"><i class="fa fa-edit"></i>ویرایش آدرس</a>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                            <!-- Single Tab Content Start -->
                            <div class="tab-pane fade" id="change-pass" role="tabpanel">
                                <div class="myaccount-content">
                                    <h3>تغییر کلمه عبور</h3>

                                    <div class="account-details-form">
                                        <form action="#">
                                            <div class="row">
                                                
                                                <div class="col-12 mb-30">
                                                    <input id="currentPass" placeholder="کلمه عبور فعلی" type="password">
                                                </div>
                                                <div class="col-12 mb-30">
                                                    <input id="newPass" placeholder="کلمه عبور جدید" type="password">
                                                </div>
                                                <div class="col-12 mb-30">
                                                    <input id="confirmNewPass" placeholder="تکرار کلمه عبور جدید" type="password">
                                                </div>

                                                <div class="col-12">
                                                    <button class="save-change-btn">ثبت تغییرات</button>
                                                </div>

                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <!-- Single Tab Content End -->
                        </div>
                    </div>
                    <!-- My Account Tab Content End -->
                </div>

            </div>

        </div>
    </div>
</div>
<!--My Account section end-->
<script src="~/lib/jquery/dist/jquery.js"></script>
<script>
    $(document).ready(function () {
        //Localize Prices
        $(".local-price").each(function () {
            $(this).text($(this).text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"))
        })
    })
</script>

